<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="partnerItem"
            type="com.init_android.app.data.model.PartnerData" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_stroke_main_radius_10">

        <ImageView
            android:id="@+id/iv_partner"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintEnd_toStartOf="@id/tv_partner_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_partner_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{partnerItem.name}"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/iv_partner"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_partner_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            app:layout_constraintStart_toEndOf="@id/tv_partner_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_partner_email"
            tools:src="@drawable/ic_android"/>


        <ImageView
            android:id="@+id/iv_partner_email"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_email_main"
            app:layout_constraintStart_toStartOf="@+id/tv_partner_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_partner_name" />

        <TextView
            android:id="@+id/tv_partner_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{partnerItem.email}"
            android:textColor="@color/tet_gray_2"
            android:textSize="12sp"
            android:includeFontPadding="false"
            android:layout_marginStart="4dp"
            app:layout_constraintStart_toEndOf="@+id/iv_partner_email"
            app:layout_constraintTop_toTopOf="@+id/iv_partner_email" />

        <ImageView
            android:id="@+id/iv_partner_include"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintStart_toStartOf="@id/iv_partner_email"
            app:layout_constraintTop_toBottomOf="@id/iv_partner_email"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_include"/>

        <TextView
            android:id="@+id/tv_partner_include"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tet_gray_2"
            android:textSize="12sp"
            android:layout_marginStart="4dp"
            tools:text="@{partnerItem.include}"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toEndOf="@id/iv_partner_include"
            app:layout_constraintTop_toBottomOf="@id/tv_partner_email"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
